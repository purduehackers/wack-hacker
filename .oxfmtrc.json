{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "printWidth": 100,
  "tabWidth": 4,
  "useTabs": false,
  "semi": true,
  "singleQuote": false,
  "trailingComma": "all",
  "arrowParens": "always",
  "experimentalSortImports": {
    "order": "asc",
    "ignoreCase": true,
    "newlinesBetween": true,
    "internalPattern": ["@/**", "~/**"]
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/dist/**",
    "**/*.min.js",
    ".orb/**"
  ]
}
